@model IEnumerable<DebtCalculatorWebApp.Models.Mortgage>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MortgageAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MortgageTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MortgageApr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MortgageAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MortgageTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MortgageApr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MortgageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MortgageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MortgageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
